<body class="pagebodybackground">
<div id="inboxbackground">
<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#inbox" role="tab" data-toggle="tab">Inbox</a></li>
  <li><a href="#sent" role="tab" data-toggle="tab">Sent Messages</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">

  <div class="tab-pane active" id="inbox">
    <div id="inboxMessages">
      <h2>Inbox</h2>
       <button type="button" class="btn btn-default btn-sm">
        <%= link_to 'Create Message', new_user_message_path%>
        <span class="glyphicon glyphicon-pencil"></span> 
        </button> 
  
      <table class="table table-hover"> 
       <tr>
        <td>Subject</td>
        <td>From</td>
        <td>Date</td>
        <td>Functions</td>
      </tr>
     </table>
    <div id="messages">
      <%= render @messages %> 
    </div>
  </div>
  </div>

  <div class="tab-pane" id="sent">

  <div id="sentMessages">
    <h2>Sent Messages</h2>
    <table class="table table-hover">
      <tr>
        <td>Subject</td>
        <td>To</td>
        <td>Date</td>
         <td>Functions</td>

      </tr>
    </table>
    <div id="messages">
      <%= render 'messages/sent' %> 
    </div>
  </div>

</div>
</div>
