              <li><%= link_to "Find Apartments", apartments_path%></li>
                            
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Messages <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
