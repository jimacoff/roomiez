<div id="inboxbackground">
<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#tenant" role="tab" data-toggle="tab">Roomiez</a></li>
  <li><a href="#landlord" role="tab" data-toggle="tab">Landlords</a></li>
  <br>
  <%= form_tag users_path, :method => 'GET' do %>
  <%= text_field_tag 'q', params[:q] %>
  <%= submit_tag 'SEARCH' %>
  <% end %><br>
</ul>
<!-- Tab panes -->

<div class="tab-content">
  <div class="tab-pane active" id="tenant">
    <table class="table">
      <thead>
        <tr>
          <th>Picture</th>
          <th>Name</th>
          <th>Profile</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
        <% if u.landlord == false && u != current_user %>
        <tr>
          <td> Picture!
          </td>
          <td><%= link_to u.name, "users/#{u.id}" %></td>
          <!-- Button trigger modal -->
          <td
            <button class="btn btn-primary btn-lg" data-toggle="modal" data-target=<%= "#myModal_#{u.id}" %> >
            View <%= u.name %> profile
            </button>
          </td>
        </tr>
        
        <!-- Modal -->
        <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id=<%="myModal_#{u.id}"%>>
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" id="myModalLabel"> <strong><%= u.name %> Profile</strong> </h3>
              </div>
              <div class="modal-body">
                <% if u.photo_file_name %>
                  <h4> Photo : <%= image_tag u.photo.url(:thumb) %> </h4>
                <% end %>
                <h4> Email : <%= u.email %> </h4>
                <h4> Age : <%= u.age %> </h4>
                <h4> About : <%= u.about %> </h4>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <%= link_to "Add #{u.name}'s circle to your circle!", circles_add_path(:user_to_add => u.id) %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </table>
    </div>
    <div class="tab-pane" id="landlord">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Picture</th>
            <th>Name</th>
            <th>Profile</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
          <% if u.landlord == true && u != current_user %>
          <tr>
            <td> Picture!
            </td>
            <td><%= link_to u.name, "users/#{u.id}" %></td>
            <!-- Button trigger modal -->
            <td
              <button class="btn btn-primary btn-lg" data-toggle="modal" data-target=<%= "#myModal_#{u.id}" %> >
              View <%= u.name %> profile
              </button>
            </td>
          </tr>
          <!-- Modal -->
          <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id=<%="myModal_#{u.id}"%>>
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <h3 class="modal-title" id="myModalLabel"> <strong><%= u.name %> Profile</strong> </h3>
                </div>
                <div class="modal-body">
                  <h4> Email : <%= u.email %> </h4>
                  <h4> Age : <%= u.age %> </h4>
                  <h4> About : <%= u.about %> </h4>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Add landlord!</button>
                </div>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>